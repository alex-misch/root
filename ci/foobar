jobs:

  test:
    docker: docker://golang:alpine
    entrypoint: ls -lah /bmpci

  build:
    docker: docker://golang
    entrypoint: go get -v -d ./...; go build -v -o /go/bin/cibin
    workdir: ./ci

  deploy:
    docker: docker://golang:alpine
    entrypoint: go version

deps:
  - base

direct: [build]
