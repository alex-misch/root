jobs:

  test:
    docker: docker://golang:1.11
    entrypoint: |
      pwd
      .scripts/test.sh

    mount:
      script: /go/src/github.com/boomfunc/root/base/.scripts
      src: /go/src/github.com/boomfunc/root/base


  build:
    docker: docker://golang:1.11
    entrypoint: |
      .scripts/build-bin.sh

    mount:
      script: /go/src/github.com/boomfunc/root/base/.scripts
      artifact: /go/bin
      src: /go/src/github.com/boomfunc/root/base


  deploy:
    docker: docker://atlassian/pipelines-awscli
    entrypoint: |
      pwd
      ls -lah /go/bin

    mount:
      artifact: /go/bin

direct: [test, build, deploy]
indirect: [test]
